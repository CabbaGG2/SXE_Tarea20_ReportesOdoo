<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    <template id="report_partner">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
          <t t-call="web.external_layout">
            <div class="page">

              <div class="text-center mt-4 mb-4">
                <h1>Orden de Preparación</h1>
                  <h3><span t-field="o.name"/></h3>
                <p><strong>Cliente:</strong> <span t-field="o.partner_id.name"/></p>
                <p><strong>Fecha:</strong> <span t-field="o.date_order" t-options='{"widget": "date"}'/></p>
              </div>

              <table class="table table-sm table-bordered mt-4">
                <thead>
                  <tr>
                    <th style="width: 20%;" class="text-right">Check</th>
                    <th style="width: 60%;">Producto</th>
                    <th style="width: 20%;" class="text-left">Cantidad</th>
                  </tr>
                </thead>
                <tbody>
                  <t t-foreach="o.order_line" t-as="line">
                    <tr t-if="not line.display_type">
                        <td class="text-center">
                            <div style="border: 1px solid #000; width: 20px; height: 20px; display: inline-block; vertical-align: middle;"></div>
                        </td>
                        <td>
                            <!-- Nombre del producto -->
                            <strong>
                                <span t-field="line.product_id.name"/>
                            </strong>
                            <br/>

                            <!-- Referencia interna -->
                            <t t-if="line.product_id.default_code">
                                <span style="color: #6c757d; font-size: 11px;">
                                    [<t t-esc="line.product_id.default_code"/>]
                                    <t t-esc="line.product_id.name"/>
                                </span>
                                <br/>
                            </t>

                            <!-- Descripción -->
                            <t t-if="line.product_id.description_sale">
                                <span style="font-size: 11px;">
                                    <t t-esc="line.product_id.description_sale"/>
                                </span>
                            </t>
                        </td>
                        <td class="text-right">
                            <span t-field="line.product_uom_qty"/>
                            <span t-field="line.product_uom"/>
                        </td>
                    </tr>
                  </t>
                </tbody>
              </table>

            </div>
          </t>
        </t>
      </t>
    </template>
  </data>
</odoo>